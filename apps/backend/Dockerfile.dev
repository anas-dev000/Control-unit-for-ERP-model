# Development Dockerfile
FROM node:20

# Install OpenSSL (Required by Prisma) and other dev tools
RUN apt-get update -y && \
    apt-get install -y openssl curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies like tsx, nodemon, etc.)
RUN npm install

# Generate Prisma Client
COPY prisma ./prisma
RUN npx prisma generate

# Copy source code (optional here, as we bind mount in compose, but good for caching layers)
COPY . .

# Expose port
EXPOSE 5000

# Run in development mode (hot reload)
CMD ["npm", "run", "dev"]
